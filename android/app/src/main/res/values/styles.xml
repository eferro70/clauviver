<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Força o uso do layout completo e ignora o ícone circular -->
    <style name="Theme.SplashScreen" parent="Theme.Material3.Light.NoActionBar">
        <!-- Cor de fundo -->
        <item name="android:windowSplashScreenBackground">@color/white</item>

        <!-- Remove o ícone circular padrão -->
        <item name="android:windowSplashScreenAnimatedIcon">@null</item>

        <!-- Usa diretamente seu layout -->
        <item name="android:windowBackground">@drawable/launch_background</item>

        <!-- Remove qualquer animação -->
        <item name="android:windowSplashScreenAnimationDuration">0</item>

        <!-- Garante que o app entre no modo normal após o splash -->
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

    <!-- Tema usado antes do Flutter carregar -->
    <style name="LaunchTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:forceDarkAllowed">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowLayoutInDisplayCutoutMode">shortEdges</item>
    </style>

    <!-- Tema normal do app -->
    <style name="NormalTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>

</resources>
