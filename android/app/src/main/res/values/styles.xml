<?xml version="1.0" encoding="utf-8"?>
<!-- android/app/src/main/res/values/styles.xml -->
<resources>
    <!-- Tema da Splash Screen (para Android 12+) -->
    <!-- Este tema é o ponto de entrada e usa a nova API de splash screen -->
    <style name="Theme.SplashScreen" parent="Theme.SplashScreen">
        <!-- Cor de fundo que aparece atrás da sua imagem -->
        <item name="windowSplashScreenBackground">@color/white</item>
        
        <!-- Define o drawable que contém sua imagem de splash.
             Isso substitui o ícone padrão. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/launch_background</item>
        
        <!-- Tema a ser aplicado APÓS a splash screen -->
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
    </style>

    <!-- Tema normal do app, usado após a inicialização -->
    <style name="NormalTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">?android:colorBackground</item>
    </style>
</resources>
